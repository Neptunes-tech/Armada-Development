<!-- upload my documents (.jpg, pdf) -->
<div id="uploadDocuments">
  <form action="/" method="POST" enctype="multipart/form-data">
    <div>
      <label>Title</label>
      <input type="text" name="title" value="<%= person.documents.title %>" />
    </div>
    <div>
      <label>System</label>
      <select name="system">
        <option label="vitals" id="vitals"></option>
        <option label="neuro" id="neuro"></option>
        <option label="ent" id="ent"></option>
        <option label="cardiac" id="cardiac"></option>
        <option label="abdo" id="abdo"></option>
        <option label="msk" id="msk"></option>
        <option label="skin" id="skin"></option>
      </select>
    </div>
    <div>
      <label>Effective Date</label>
      <input type="date" name="effectiveDateTime" value="<%=
      person.documents.effectiveDateTime == null ? "" :
      person.documents.effectiveDateTime.toISOString().split('T')[0]%>">
    </div>
    <div>
      <label>Document</label>
      <input type="file" name="documentImage" />
    </div>
    <div>
      <button type="submit">Submit</button>
    </div>
  </form>
</div>